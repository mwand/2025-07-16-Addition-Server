{
  "name": "addition-server",
  "version": "1.0.0",
  "description": "A simple addition server to illustrate frontend-backend architecture",
  "scripts": {
    "// --- PRODUCTION ---": "",
    "build": "tsc",
    "build:frontend": "cd frontend && npm install && npm run build",
    "build:all": "npm run build && npm run build:frontend",
    "build:render": "cd frontend && npm install && npm run build && cd .. && npm run build",
    "start": "node dist/server.js",

    "// --- DEVELOPMENT ---": "",
    "dev": "tsx watch src/server.ts",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:all": "concurrently \"npm run dev\" \"npm run dev:frontend\"",
    "dev:scratchpad": "tsx src/scratchpad.ts",

    "// --- TESTING ---": "",
    "test": "vitest --watch=false",
    "test:watch": "vitest",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "test:mutation": "stryker run",

    "// --- CODE QUALITY ---": "",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "mutation": "stryker run" 
  },
  "keywords": [
    "typescript",
    "node",
    "express",
    "addition",
    "service",
    "controller"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@stryker-mutator/core": "^8.0.0",
    "@stryker-mutator/typescript-checker": "^8.0.0",
    "@stryker-mutator/vitest-runner": "^8.0.0",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.5",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "@vitest/coverage-v8": "^1.2.2",
    "@vitest/ui": "^1.2.2",
    "concurrently": "^9.2.0",
    "eslint": "^8.56.0",
    "rimraf": "^5.0.5",
    "supertest": "^7.1.3",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.2"
  },
  "dependencies": {
    "@chakra-ui/react": "^3.27.1",
    "@vitejs/plugin-react": "^5.0.4",
    "express": "^4.18.2",
    "zod": "^3.22.4"
  }
}
