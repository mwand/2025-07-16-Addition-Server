{
  "name": "addition-server",
  "version": "1.0.0",
  "description": "A simple addition server to illustrate service-controller architecture",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "tsx": "tsx src/scratchpad.ts",
    "dev": "tsx watch src/server.ts",
    "test": "vitest  --watch=false",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "mutation": "stryker run",
    "clean": "rimraf dist",
    "prebuild": "npm run clean"
  },
  "keywords": ["typescript", "node", "express", "addition", "service", "controller"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@stryker-mutator/core": "^8.0.0",
    "@stryker-mutator/typescript-checker": "^8.0.0",
    "@stryker-mutator/vitest-runner": "^8.0.0",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.5",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "@vitest/coverage-v8": "^1.2.2",
    "@vitest/ui": "^1.2.2",
    "eslint": "^8.56.0",
    "rimraf": "^5.0.5",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.2"
  },
  "dependencies": {
    "express": "^4.18.2",
    "zod": "^3.22.4"
  }
}
