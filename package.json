{
  "name": "addition-server",
  "version": "1.0.0",
  "description": "A simple addition server to illustrate service-controller architecture",
  "main": "src/server.ts",
  "scripts": {
    "start": "node src/server.ts",
    "dev": "node --watch src/server.ts",
    "test": "vitest --watch=false",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "check": "tsc",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "mutation": "stryker run",
    "frontend:dev": "cd frontend && npm run dev",
    "frontend:build": "cd frontend && npm run build",
    "frontend:install": "cd frontend && npm install",
    "dev:all": "concurrently \"npm run dev\" \"npm run frontend:dev\"",
    "build:all": "npm run frontend:build",
    "build:render": "cd frontend && npm install && npm run build"
  },
  "keywords": [
    "typescript",
    "node",
    "express",
    "addition",
    "service",
    "controller"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@stryker-mutator/core": "^9.3.0",
    "@stryker-mutator/typescript-checker": "^9.3.0",
    "@stryker-mutator/vitest-runner": "^9.3.0",
    "@types/express": "^5.0.5",
    "@types/node": "^24.10.0",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "@vitest/coverage-v8": "^4.0.8",
    "concurrently": "^9.2.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "supertest": "^7.1.3",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.46.3",
    "vitest": "^4.0.8"
  },
  "dependencies": {
    "express": "^5.1.0",
    "zod": "^4.1.12"
  }
}
